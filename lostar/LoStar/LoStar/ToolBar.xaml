<UserControl x:Class="LoStar.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:control="clr-namespace:LoStar"
             mc:Ignorable="d" >
    <UserControl.Resources>
      <control:XamlToUIElementConverter x:Key="xamlToUiConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="left" DockPanel.Dock ="Top" Margin="0,0,0,4">
        <Button x:Name="Anchor" Height="32" Width="32" 
            Content ="{Binding Converter={StaticResource xamlToUiConverter}, ConverterParameter=anchor.xaml}" BorderThickness="0" />
        <Button x:Name="Compass" Height="32" Width="32"
            Content="{Binding Converter={StaticResource xamlToUiConverter}, ConverterParameter=compass.xaml}" BorderThickness="0" />
    </StackPanel>
</UserControl>
