<Window x:Class="LoStar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:LoStar"        
        Title="MainWindow" Height="350" Width="525"
        >

  <DockPanel>
    <control:ToolBar x:Name="ToolBar" DockPanel.Dock ="Top" />
    <Grid x:Name="StripeContainer">
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <control:CursorOverlay 
            x:Name="CursorCanvas"  
            Grid.Row="0" Grid.RowSpan="2"
            Grid.ZIndex="2"
            />
        <StackPanel Grid.Row="1" Grid.ZIndex="1">
            <control:TimeAxisStripe x:Name ="TimeAxis"/>
            <control:DigitalStripe x:Name="Stripe0" />
            <control:DigitalStripe x:Name="Stripe1" />
        </StackPanel>
    </Grid>
  </DockPanel>
</Window>
